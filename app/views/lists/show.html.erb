<div class="container">
  <h1><%= @list.name %></h1>

  <% if @list.bookmarks.empty? %>
    <p>You haven't added any movie yet!</p>
  <% else %>
    <%= render "lists/bookmark_list", bookmarks: @list.bookmarks, list: @list %>
  <% end %>

  <h3>Add a movie to this watch list</h3>
  <%= render "lists/bookmark_form", list: @list, bookmark: @bookmark %>

  <%= link_to "Back to my lists", root_path, class: "btn btn-secondary" %>
</div>
